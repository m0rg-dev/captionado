    "outDir": "./dist/",
    "sourceMap": true,
    "noImplicitAny": true,
    "module": "esnext",
    "target": "es5",
    "jsx": "react",
    "moduleResolution": "node",
    "strict": true,
    "noUncheckedIndexedAccess": true,
  },
  "include": [
    "src/*.d.ts",
    "src/*.ts",
    "src/*.tsx",
  ]
}